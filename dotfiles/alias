
alias ls="ls --color=auto"
alias ll='ls -l'
alias lla='ls -la'
alias lx='ls -l --color | awk '\''{k=0;for(i=0;i<=8;i++)k+=((substr($1,i+2,1)~/[rwx]/)*2^(8-i));if(k)printf("%0o ",k);print}'\'''
alias rm='rm -i'
alias pico='nano -w'
alias cls='clear'
alias du='du -ch'
alias who='who --lookup'
alias epoch='date +%s'
alias detar='tar zxvf'
alias debz='tar jxvf'
alias cat='bat --style=plain'
